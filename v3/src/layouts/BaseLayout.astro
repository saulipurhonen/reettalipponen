---
import { ClientRouter } from "astro:transitions"
import SEO from "../components/SEO.astro"
import Navigation from "../components/Navigation.astro"
import Footer from "../components/Footer.astro"
import { DEFAULT_LOCALE, type Locale } from "../lib/i18n"
import "../app.css"

interface Props {
  title: string
  description: string
  locale?: Locale
  backgroundImage?: string
}

const {
  title,
  description,
  locale = DEFAULT_LOCALE,
  backgroundImage,
} = Astro.props

const slideTransition = {
  forwards: {
    old: {
      name: "slide-out-left",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
    new: {
      name: "slide-in-right",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
  },
  backwards: {
    old: {
      name: "slide-out-right",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
    new: {
      name: "slide-in-left",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
  },
}
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <SEO title={title} description={description} />
    <ClientRouter />
  </head>
  <body
    class:list={[
      "min-h-screen flex flex-col bg-black text-white",
      backgroundImage && "md:bg-cover md:bg-center",
    ]}
    style={backgroundImage
      ? `background-image: url('${backgroundImage}')`
      : undefined}
  >
    <Navigation />
    <main class="flex-1" transition:animate={slideTransition}>
      <slot />
    </main>
    <Footer />

    <!-- Global lightbox overlay (outside main to avoid stacking context issues) -->
    <div
      id="lightbox"
      style="display:none"
      class="fixed inset-0 z-[60] flex items-center justify-center"
      role="dialog"
      aria-modal="true"
      aria-label="Kuvan suurennus"
    >
      <div
        id="lightbox-backdrop"
        class="absolute inset-0 bg-black/90 backdrop-blur-sm"
      >
      </div>
      <button
        id="lightbox-close"
        type="button"
        class="absolute top-4 right-4 z-20 p-2 text-white/70 hover:text-white transition-colors"
        aria-label="Sulje"
      >
        <svg
          class="w-8 h-8 pointer-events-none"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <img
        id="lightbox-img"
        src=""
        alt=""
        class="relative z-10 max-h-[90vh] max-w-[90vw] object-contain"
      />
    </div>

    <script is:inline>
      ;(function () {
        var lightbox = document.getElementById("lightbox")
        var lightboxImg = document.getElementById("lightbox-img")
        var closeBtn = document.getElementById("lightbox-close")
        var backdrop = document.getElementById("lightbox-backdrop")
        if (!lightbox || !lightboxImg || !closeBtn || !backdrop) return
        function show(src, alt) {
          lightboxImg.src = src
          lightboxImg.alt = alt
          lightbox.style.display = "flex"
          closeBtn.focus()
        }
        function hide() {
          lightbox.style.display = "none"
          lightboxImg.src = ""
        }
        document.addEventListener("click", function (e) {
          var trigger = e.target.closest(".lightbox-trigger")
          if (trigger) {
            show(trigger.dataset.src || "", trigger.dataset.alt || "")
          }
        })
        closeBtn.addEventListener("click", function () {
          hide()
        })
        backdrop.addEventListener("click", function () {
          hide()
        })
        document.addEventListener("keydown", function (e) {
          if (e.key === "Escape" && lightbox.style.display !== "none") hide()
        })
      })()
    </script>

    <style is:global>
      @keyframes slide-out-left {
        from {
          opacity: 1;
          transform: translateX(0);
        }
        to {
          opacity: 0;
          transform: translateX(-50px);
        }
      }
      @keyframes slide-in-right {
        from {
          opacity: 0;
          transform: translateX(50px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      @keyframes slide-out-right {
        from {
          opacity: 1;
          transform: translateX(0);
        }
        to {
          opacity: 0;
          transform: translateX(50px);
        }
      }
      @keyframes slide-in-left {
        from {
          opacity: 0;
          transform: translateX(-50px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @media (max-width: 767px) {
        ::view-transition-old(*),
        ::view-transition-new(*) {
          animation-duration: 0s !important;
        }
      }
    </style>

    <script>
      import gsap from "gsap"

      const NAV_HREFS = [
        "/",
        "/works/ceramic",
        "/works/installation",
        "/works/sculpture",
        "/works/customer",
        "/cv",
        "/contact",
      ]

      function getNavIndex(path: string): number {
        const exact = NAV_HREFS.indexOf(path)
        if (exact !== -1) return exact
        const prefix = NAV_HREFS.findIndex(
          (href) => href !== "/" && path.startsWith(href)
        )
        return prefix !== -1 ? prefix : -1
      }

      function initAnimations(initialLoad = false) {
        if (initialLoad) {
          const revealElements = document.querySelectorAll(".reveal")
          gsap.set(revealElements, { opacity: 0, y: 30 })

          const observer = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  gsap.to(entry.target, {
                    opacity: 1,
                    y: 0,
                    duration: 0.8,
                    ease: "power2.out",
                  })
                  observer.unobserve(entry.target)
                }
              })
            },
            { threshold: 0.1 }
          )

          revealElements.forEach((el) => observer.observe(el))
        }

        const footer = document.querySelector("footer")
        if (footer) {
          gsap.fromTo(
            footer,
            { opacity: 0 },
            { opacity: 1, duration: 1, delay: 0.3 }
          )
        }
      }

      initAnimations(true)

      // Set transition direction based on nav order
      document.addEventListener("astro:before-preparation", (event: any) => {
        const oldIndex = getNavIndex(window.location.pathname)
        const newIndex = getNavIndex(
          new URL(event.to, window.location.origin).pathname
        )

        if (oldIndex !== -1 && newIndex !== -1 && oldIndex !== newIndex) {
          event.direction = oldIndex < newIndex ? "forward" : "back"
        }
      })

      document.addEventListener("astro:after-swap", () => {
        initAnimations(false)
      })
    </script>
  </body>
</html>
