---
import { ClientRouter } from "astro:transitions"
import SEO from "../components/SEO.astro"
import Navigation from "../components/Navigation.astro"
import Footer from "../components/Footer.astro"
import { DEFAULT_LOCALE, type Locale } from "../lib/i18n"
import "../app.css"

interface Props {
  title: string
  description: string
  locale?: Locale
  backgroundImage?: string
}

const {
  title,
  description,
  locale = DEFAULT_LOCALE,
  backgroundImage,
} = Astro.props

const slideTransition = {
  forwards: {
    old: {
      name: "slide-out-left",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
    new: {
      name: "slide-in-right",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
  },
  backwards: {
    old: {
      name: "slide-out-right",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
    new: {
      name: "slide-in-left",
      duration: "0.3s",
      easing: "cubic-bezier(0.4, 0, 0.2, 1)",
      fillMode: "both",
    },
  },
}
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <SEO title={title} description={description} />
    <ClientRouter />
  </head>
  <body
    class:list={[
      "min-h-screen flex flex-col bg-black text-white",
      backgroundImage && "md:bg-cover md:bg-center",
    ]}
    style={backgroundImage
      ? `background-image: url('${backgroundImage}')`
      : undefined}
  >
    <Navigation />
    <main id="main-content" class="flex-1" transition:animate={slideTransition}>
      <slot />
    </main>
    <Footer />

    <!-- Global lightbox overlay (outside main to avoid stacking context issues) -->
    <div
      id="lightbox"
      style="display:none"
      class="fixed inset-0 z-[60] flex items-center justify-center"
      role="dialog"
      aria-modal="true"
      aria-label="Kuvan suurennus"
    >
      <div
        id="lightbox-backdrop"
        class="absolute inset-0 bg-black/90 backdrop-blur-sm"
      >
      </div>
      <button
        id="lightbox-close"
        type="button"
        class="absolute top-4 right-4 z-20 p-2 text-white/70 hover:text-white transition-colors"
        aria-label="Sulje"
      >
        <svg
          class="w-8 h-8 pointer-events-none"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <button
        id="lightbox-prev"
        type="button"
        class="absolute left-4 z-20 p-2 text-white/70 hover:text-white transition-colors hidden"
        aria-label="Edellinen kuva"
      >
        <svg
          class="w-8 h-8 pointer-events-none"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button
        id="lightbox-next"
        type="button"
        class="absolute right-4 z-20 p-2 text-white/70 hover:text-white transition-colors hidden"
        aria-label="Seuraava kuva"
      >
        <svg
          class="w-8 h-8 pointer-events-none"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </button>
      <p
        id="lightbox-title"
        class="absolute top-4 left-4 z-20 text-lg font-semibold text-white/90"
      >
      </p>
      <img
        id="lightbox-img"
        src=""
        alt=""
        class="relative z-10 max-h-[90vh] max-w-[90vw] object-contain"
      />
      <p id="lightbox-counter" class="sr-only" aria-live="polite"></p>
    </div>

    <script is:inline>
      ;(function () {
        var lightbox = document.getElementById("lightbox")
        var lightboxImg = document.getElementById("lightbox-img")
        var closeBtn = document.getElementById("lightbox-close")
        var prevBtn = document.getElementById("lightbox-prev")
        var nextBtn = document.getElementById("lightbox-next")
        var backdrop = document.getElementById("lightbox-backdrop")
        if (
          !lightbox ||
          !lightboxImg ||
          !closeBtn ||
          !prevBtn ||
          !nextBtn ||
          !backdrop
        )
          return
        var counter = document.getElementById("lightbox-counter")
        var titleEl = document.getElementById("lightbox-title")
        var lastFocused = null
        var currentGroup = []
        var currentIndex = 0
        var currentTitle = ""
        var focusable = [closeBtn, prevBtn, nextBtn]

        function updateNav() {
          prevBtn.classList.toggle(
            "hidden",
            currentGroup.length <= 1 || currentIndex === 0
          )
          nextBtn.classList.toggle(
            "hidden",
            currentGroup.length <= 1 || currentIndex === currentGroup.length - 1
          )
        }

        function showIndex(i) {
          currentIndex = i
          lightboxImg.src = currentGroup[i].src
          lightboxImg.alt = currentGroup[i].alt
          updateNav()
          if (titleEl) titleEl.textContent = currentTitle
          if (counter && currentGroup.length > 1) {
            counter.textContent =
              "Kuva " + (i + 1) + " / " + currentGroup.length
          }
        }

        function show(trigger) {
          lastFocused = document.activeElement
          var group = trigger.dataset.group
          currentTitle = trigger.dataset.title || ""
          var triggers = group
            ? Array.from(
                document.querySelectorAll(
                  '.lightbox-trigger[data-group="' + group + '"]'
                )
              )
            : [trigger]
          currentGroup = triggers.map(function (t) {
            return { src: t.dataset.src || "", alt: t.dataset.alt || "" }
          })
          currentIndex = triggers.indexOf(trigger)
          if (currentIndex === -1) currentIndex = 0
          lightbox.style.display = "flex"
          document.body.style.overflow = "hidden"
          showIndex(currentIndex)
          closeBtn.focus()
        }

        function hide() {
          lightbox.style.display = "none"
          lightboxImg.src = ""
          document.body.style.overflow = ""
          currentGroup = []
          currentTitle = ""
          if (titleEl) titleEl.textContent = ""
          prevBtn.classList.add("hidden")
          nextBtn.classList.add("hidden")
          if (lastFocused && lastFocused.focus) lastFocused.focus()
          lastFocused = null
        }

        document.addEventListener("click", function (e) {
          var trigger = e.target.closest(".lightbox-trigger")
          if (trigger) show(trigger)
        })
        closeBtn.addEventListener("click", function () {
          hide()
        })
        backdrop.addEventListener("click", function () {
          hide()
        })
        prevBtn.addEventListener("click", function () {
          if (currentIndex > 0) showIndex(currentIndex - 1)
        })
        nextBtn.addEventListener("click", function () {
          if (currentIndex < currentGroup.length - 1)
            showIndex(currentIndex + 1)
        })
        document.addEventListener("keydown", function (e) {
          if (lightbox.style.display === "none") return
          if (e.key === "Escape") {
            hide()
            return
          }
          if (e.key === "ArrowLeft") {
            if (currentIndex > 0) showIndex(currentIndex - 1)
            return
          }
          if (e.key === "ArrowRight") {
            if (currentIndex < currentGroup.length - 1)
              showIndex(currentIndex + 1)
            return
          }
          if (e.key === "Tab") {
            e.preventDefault()
            var visible = focusable.filter(function (b) {
              return !b.classList.contains("hidden")
            })
            var idx = visible.indexOf(document.activeElement)
            var next = e.shiftKey
              ? visible[(idx - 1 + visible.length) % visible.length]
              : visible[(idx + 1) % visible.length]
            next.focus()
          }
        })
      })()
    </script>

    <style is:global>
      @keyframes slide-out-left {
        from {
          opacity: 1;
          transform: translateX(0);
        }
        to {
          opacity: 0;
          transform: translateX(-50px);
        }
      }
      @keyframes slide-in-right {
        from {
          opacity: 0;
          transform: translateX(50px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      @keyframes slide-out-right {
        from {
          opacity: 1;
          transform: translateX(0);
        }
        to {
          opacity: 0;
          transform: translateX(50px);
        }
      }
      @keyframes slide-in-left {
        from {
          opacity: 0;
          transform: translateX(-50px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @media (max-width: 767px) {
        ::view-transition-old(*),
        ::view-transition-new(*) {
          animation-duration: 0s !important;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        ::view-transition-old(*),
        ::view-transition-new(*) {
          animation-duration: 0s !important;
        }
      }
    </style>

    <script>
      import gsap from "gsap"

      const prefersReducedMotion = window.matchMedia(
        "(prefers-reduced-motion: reduce)"
      ).matches

      const NAV_HREFS = [
        "/",
        "/works/ceramic",
        "/works/installation",
        "/works/sculpture",
        "/works/customer",
        "/cv",
        "/contact",
      ]

      function getNavIndex(path: string): number {
        const exact = NAV_HREFS.indexOf(path)
        if (exact !== -1) return exact
        const prefix = NAV_HREFS.findIndex(
          (href) => href !== "/" && path.startsWith(href)
        )
        return prefix !== -1 ? prefix : -1
      }

      function initAnimations(initialLoad = false) {
        if (prefersReducedMotion) {
          const revealElements = document.querySelectorAll(".reveal")
          gsap.set(revealElements, { opacity: 1, y: 0 })
          return
        }

        if (initialLoad) {
          const revealElements = document.querySelectorAll(".reveal")
          gsap.set(revealElements, { opacity: 0, y: 30 })

          const observer = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  gsap.to(entry.target, {
                    opacity: 1,
                    y: 0,
                    duration: 0.8,
                    ease: "power2.out",
                  })
                  observer.unobserve(entry.target)
                }
              })
            },
            { threshold: 0.1 }
          )

          revealElements.forEach((el) => observer.observe(el))
        }

        const footer = document.querySelector("footer")
        if (footer) {
          gsap.fromTo(
            footer,
            { opacity: 0 },
            { opacity: 1, duration: 1, delay: 0.3 }
          )
        }
      }

      initAnimations(true)

      // Set transition direction based on nav order
      document.addEventListener("astro:before-preparation", (event: any) => {
        const oldIndex = getNavIndex(window.location.pathname)
        const newIndex = getNavIndex(
          new URL(event.to, window.location.origin).pathname
        )

        if (oldIndex !== -1 && newIndex !== -1 && oldIndex !== newIndex) {
          event.direction = oldIndex < newIndex ? "forward" : "back"
        }
      })

      document.addEventListener("astro:after-swap", () => {
        initAnimations(false)
      })
    </script>
  </body>
</html>
