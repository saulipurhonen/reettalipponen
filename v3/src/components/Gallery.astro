---
interface Props {
  items: Array<{
    image?: string | null;
    title?: string | null;
  }>;
}

const { items } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {items.map((item) => (
    <div class="reveal">
      <img
        src={item.image || ''}
        alt={item.title || ''}
        class="w-full h-auto object-cover"
        loading="lazy"
      />
      {item.title && <p class="mt-2 text-sm text-gray-600">{item.title}</p>}
    </div>
  ))}
</div>
