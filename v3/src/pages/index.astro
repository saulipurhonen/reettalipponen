---
import BaseLayout from "../layouts/BaseLayout.astro"
import { getContent } from "../lib/content"

interface HomeData {
  title: string
  description: string
}

const { data, content } = getContent<HomeData>("fi/home/index.md")
---

<BaseLayout title={data.title} description={data.description}>
  <link
    slot="head"
    rel="preload"
    as="image"
    type="image/webp"
    imagesrcset="/images/home_bg_640.webp 640w, /images/home_bg_1024.webp 1024w, /images/home_bg_1920.webp 1920w"
    imagesizes="100vw"
    fetchpriority="high"
  />
  <section aria-label="Esittely" class="relative min-h-[70vh] flex items-end">
    <picture>
      <source
        type="image/webp"
        srcset="/images/home_bg_640.webp 640w, /images/home_bg_1024.webp 1024w, /images/home_bg_1920.webp 1920w"
        sizes="100vw"
      />
      <img
        src="/images/home_bg_1920.jpg"
        srcset="/images/home_bg_640.jpg 640w, /images/home_bg_1024.jpg 1024w, /images/home_bg_1920.jpg 1920w"
        sizes="100vw"
        alt="Kuvataiteilija Reetta Lipponen"
        class="absolute inset-0 w-full h-full object-cover object-[0%_30%]"
        loading="eager"
        fetchpriority="high"
        decoding="async"
      />
    </picture>
    <div
      class="absolute inset-0 bg-gradient-to-t from-surface via-surface/40 to-transparent"
    >
    </div>
    <div class="relative z-10 mx-auto max-w-6xl w-full px-4 pb-16">
      <h1
        class="reveal text-5xl md:text-7xl font-light tracking-tight text-text"
      >
        {data.title}
      </h1>
      <p class="reveal mt-2 text-lg text-text-muted">Kuvataiteilija</p>
    </div>
  </section>
  <section aria-label="Sisältö" class="reveal mx-auto max-w-3xl px-4 py-16">
    <div class="prose prose-theme max-w-none" set:html={content} />
  </section>
</BaseLayout>
